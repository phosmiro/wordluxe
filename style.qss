QPushButton {
    background-color: #fff;
    border-radius: 32px;
    font-size: 20px;
    padding: 20px;
    font-family: Inter;
}

QPushButton:focus, #extremeButton {
    outline: 0;
}

#heading {
    font-size: 32px;
    font-family: Georgia;
    color: white;
}

#key, #enterButton {
    background-color: #b8bec1;
    padding: 20px;
    border-radius: 5px;
    font-weight: bold;
    font-family: Inter;
    color: white;
}

#key {
    font-size: 20px;
}

#enterButton {
    font-size: 15px;
}

#extremeButton {
    background-color: #D03939;
    color: #fff;
}

#mmframe, #cframe, #dframe, #gframe {
    background-image:url(assets/background1.png);
}

#timerLabel {
    font-size: 60px; 
    font-family: Inter; 
    color: white; 
    font-weight: bold;
    } 

#grid {
    font-family: Inter; 
    font-weight: bold; 
    font-size: 48px; 
    color: black; 
    background-color: transparent; border: 2px solid grey;
}

#quitButton {
    border: 2px solid white;
    background-color: transparent;
    color: #fff;
}
 
#powerupButton {
    background: transparent;
}

#button:hover, #button:focus {
    background-color: #e6e6e6;
}

#extremeButton:hover {
    background-color: #8f3939;
}

#extremeButton:focus {
    background-color: #8f3939;
}

#quitButton:hover {
    border: 2px solid #b3b3b3;
    color: #b3b3b3
}

#quitButton:focus {
    border: 2px solid #b3b3b3;
    color: #b3b3b3
}
